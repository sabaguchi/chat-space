.side_bar
  .side_bar__user-name
    .side_bar__user-name__user
      =current_user.name
    .side_bar__user-name__icon
      =link_to new_group_path do
        =icon("far", "edit", class: "side_bar__user-name__icon__edit")
      =link_to edit_user_path(current_user) do
        =icon("fas", "cog", class: "side_bar__user-name__icon__cog")
  .side_bar__group-list
    - current_user.groups.each do |group|
      .side_bar__group-list__group
        = link_to group_messages_path(group) do
          .side_bar__group-list__group__name
            = group.name
          .side_bar__group-list__group__message
            = group.show_last_message